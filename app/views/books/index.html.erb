<h1>Title</h1>
<h1>body</h1>
    
<% @books.each do |book| %>
  <%= book.title %>
  <%= book.body %>
  <%=link_to "Show", book_path(book) %>
  <%=link_to "Edit",  edit_book_path(book)  %>
  <%=link_to "Destroy",  book_path(book)  ,method: :delete, "data-confirm" => "本当に削除しますか？"%>
<% end %>
    
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
